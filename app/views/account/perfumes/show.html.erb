<!-- # review du parfum
# 80% -->

<div class="wrapper-grey">
  <div class="container padded">
    <div class="row">
      <div class="col-xs-12 col-md-offset-3 col-md-6">
        <div class="card">
          <img class="pic-home text-center" src="https://static.pexels.com/photos/1924/sea-landscape-mountains-nature.jpg">
          <h3>Vos sensations</h3>
          <%= simple_form_for(@perfume.review, url: account_perfume_reviews_path, method: :put, html: { class: "checkout-form" }) do |f| %>
            <%= f.error_notification %>

            <%= f.input :street, :input_html => { "data-autocomplete" => "street" }, :as => :hidden %>
            <%= f.input :zip_code, :input_html => { "data-autocomplete" => "postal_code" }, :as => :hidden %>
            <%= f.input :city, :input_html => { "data-autocomplete" => "locality" }, :as => :hidden %>
            <%= f.input :country_code, :input_html => { "data-autocomplete" => "country" }, label: "Country", :as => :hidden %>

            <%= f.button :submit, t('.submit'), html: { class: "checkout-form" }%>
          <% end %>
          <p class="text-center"><progress value="80" max="100"></progress></p>
          <p class="text-center"><%= link_to t(".top_call_to_action", default: "Next step"), "#", class: "navbar-wagon-item navbar-wagon-button btn" %></p>
        </div>
      </div>
    </div>
  </div>
</div>




