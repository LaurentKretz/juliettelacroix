<div class="container">
  <div class="small-padded"></div>
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <h2><%= t('.sign_in', :default => "Sign in") %></h2>

      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div class="login"><%= f.label :email %><br />
        <%= f.email_field :email, :class => 'login' %></div>

        <div class="login"><%= f.label :password %><br />
        <%= f.password_field :password, :class => 'login' %></div><br />

        <div class="login"><%= f.submit t('.sign_in', :default => "Sign in") %></div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
 </div>
