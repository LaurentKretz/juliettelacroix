<div class='navbar-juliette'>
  <div class="navbar-side">
    <div class="navbar-wagon-item">
        <div class="dropdown">
        <i class="fa fa-bars menu-logo dropdown-toggle" data-toggle="dropdown"></i>
          <ul class="dropdown-menu dropdown-menu-left">
            <li><a href=""><%= t('.artist') %></a></li>
            <li><a href=""><%= t('.collection') %></a></li>
            <li><a href=""><%= t('.blog') %></a></li>
            <li><a href=""><%= t('.top_call_to_action') %></a></li>
          </ul>
        </div>
      </div>
    <div class="navbar-side-left hidden-xs hidden-sm">
      <a href=""><%= t('.artist') %></a>
      <a href=""><%= t('.collection') %></a>
    </div>
  </div>
  <%= link_to root_path, class: "navbar-logo hidden-xs", id: "logo-font" do %>
    Juliette Lacroix
  <% end %>
  <%= link_to root_path, class: "navbar-logo hidden-sm hidden-md hidden-lg", id: "logo-font" do %>
    JL
  <% end %>
  <div class='navbar-side'>
    <div class="navbar-side-right hidden-xs hidden-sm">
      <a href=""><%= t('.blog') %></a>
      <%= link_to t(".top_call_to_action"), discover_path%>
    </div>

    <% if user_signed_in? %>


      <!-- Profile picture and dropdown -->
      <div class="navbar-wagon-item" id="logo-perfume">
        <div class="dropdown">
          <%= image_tag "logo.jpg", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to account_dashboard_path do %>
                <i class="fa fa-user"></i> <%= t ".profile", default: "Profile" %>
              <% end %>
            </li>
            <li>
              <%= link_to new_order_path do %>
                <i class="fa fa-shopping-basket"></i>  <%= t ".basket", default: "Panier" %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "Log out" %>
              <% end %>
            </li>
          </ul>
        </div>
    <% else %>

      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#login-modal" id="hp_login_modal">Log In</button>

      <%= render 'welcome/login_modal' %>



    <% end %>

  </div>


  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Juliette Lacroix</a></li>
        <li><a href="#">La 1ere collection</a></li>
        <li><a href="#">L'expérience découverte</a></li>
        <li><a href="#">Demander une invitation</a></li>
        <li><a href="#">Blog Esprit des Sens</a></li>
      </ul>
    </div>
  </div>

</div>
</div>


