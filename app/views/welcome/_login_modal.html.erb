<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  <div class="modal-dialog modal-lg col-xs-12">
    <div class="modal-content">
      <button class="close" data-dismiss="modal"><i class="fa fa-times"></i></button>
      <h2>Log In</h2>
      <div id="modal-frame">
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

          <div><%= f.label :email, :class => "hp-inputmodal"%><br />
          <%= f.email_field :email, :autofocus => true, :class => "hp-inputmodal", :id => "borderbottom" %>
          </div>

          <div><%= f.label :password, :class => "hp-inputmodal"%><br />
          <%= f.password_field :password, :class => "hp-inputmodal", :id => "borderbottom"%>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div><%= f.check_box :remember_me, :class => "hp-inputmodal" %> <%= f.label :remember_me, :class => "hp-inputmodal" %>
            </div>
          <% end %>

          <%= f.submit "Log In", :class => 'btn btn-success btn-lg btn-block' %>

      <% end %>
      <%= render "devise/shared/links" %>
      </div>





    </div>
  </div>
</div>




