<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h2><%= t('.title')%></h2>
      <p>Voici le récapitulatif des articles ajoutés à votre panier. </p>
    </div>
  </div>
  <div class="frame">
    <div class="row">
      <div class="col-xs-9 col-sm-7 col-sm-offset-1">
        <h4>Produits</h4>
      </div>
      <div class="col-xs-1"><h4 class="text-center">Quantités</h4></div>
      <div class="col-xs-1"><h4 class="text-center">Prix</h4></div>
    </div>
    <% @order.order_items.each do |order_item| %>
      <div class="row">
        <div class="col-xs-9 col-sm-7 col-sm-offset-1">
          <% if order_item.product_type == "Perfume"%>
            <h4> <%= link_to account_perfume_path(id:order_item.product_id) do %>
              <%= order_item.product.name %> - Ref : <%= order_item.product_sku %>
            <%end%> </h4>
          <%else%>
            <h4><%= order_item.product.name %> - Ref : <%= order_item.product_sku %></h4>
          <%end%>
        </div>
        <div class="col-xs-1 text-center">
          <h4><%= order_item.quantity %></h4>
        </div>
        <div class="col-xs-1 text-center">
          <h4><%= humanized_money_with_symbol(order_item.amount) %></h4>
        </div>
        <div class="col-xs-1 text-center">
        <h4><%= link_to order_item_path(id:order_item.id), method: "delete" do%>
          <i class="fa fa-trash-o"></i>
        <%end%></h4>
        </div>
      </div>
    <%end%>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-1">
      <h4>Vos bénéfices</h4>
      <div class="flexbox"><i class="fa fa-truck"></i>Livraison gratuite en France métropolitaine</div>
      <div class="flexbox"><i class="fa fa-reply"></i>Retours gratuits
      </div>
      <div class="flexbox"><i class="fa fa-smile-o"></i>Satisfait(e) ou remboursé(e)
      </div>
    </div>
    <div class="totalcolor">
      <div class="totalcolor col-xs-12 col-sm-2">
        <h4>Total to pay</h4>
      </div>
      <div class="totalcolor col-xs-1"><h4 class="text-left"><%= humanized_money_with_symbol(@order.amount) %></h4></div>
    </div>
  </div>
  <div class="small-padded"></div>
  <% if @order.amount_cents == 0 %>
    <h3 class="text-center">Votre panier est vide</h3 class="text-center">
  <%else%>
    <div class="text-center">
      <%= form_tag orders_path do %>
        <%= hidden_field_tag 'order_id', @order.id %>
        <%= submit_tag 'Commander', class: "btn_order btn btn-lg" %>
      <% end %>
    </div>
  <%end%>
  <h4 class="text-center"><%= link_to "Retourner à mon espace", account_dashboard_path %></h4>
</div>

<div class="min-height"></div>


